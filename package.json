{
  "name": "screenrec",
  "version": "1.0.0",
  "description": "Minimal 3D Screen Recorder",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npx vite --port 3000\" \"wait-on http://localhost:3000 && electron . --dev\"",
    "build:react": "vite build",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:linux": "npm run build:react && electron-builder --linux"
  },
  "build": {
    "appId": "com.screenrec.app",
    "productName": "ScreenRec",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
}
